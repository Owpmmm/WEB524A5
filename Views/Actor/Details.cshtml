@model JK2247A5.Models.ActorWithShowInfoViewModel

@{
    ViewBag.Title = "Details";
}
<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <!-- Name -->
        <div class="row mb-2">
            <dt class="col-sm-2 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10 text-start">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>

        <!-- Alternate Name -->
        <div class="row mb-2">
            <dt class="col-sm-2 text-end fw-bold">
                @Html.DisplayNameFor(model => model.AlternateName)
            </dt>
            <dd class="col-sm-10 text-start">
                @Html.DisplayFor(model => model.AlternateName)
            </dd>
        </div>

        <!-- Birth Date -->
        <div class="row mb-2">
            <dt class="col-sm-2 text-end fw-bold">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10 text-start">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
        </div>

        <!-- Height -->
        <div class="row mb-2">
            <dt class="col-sm-2 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Height)
            </dt>
            <dd class="col-sm-10 text-start">
                @Html.DisplayFor(model => model.Height)
            </dd>
        </div>

        <!-- Image -->
        <div class="row mb-2">
            <dt class="col-sm-2 text-end fw-bold">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10 text-start">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Actor Image" style="max-height: 150px; max-width: 150px;" />
                }
            </dd>
        </div>

        <!-- Executive -->
        <div class="row mb-2">
            <dt class="col-sm-2 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Executive)
            </dt>
            <dd class="col-sm-10 text-start">
                @Html.DisplayFor(model => model.Executive)
            </dd>
        </div>

        <!-- Shows -->
        <hr />
        <div class="row mb-2">
            <dt class="col-sm-2 text-end fw-bold">
                @Html.DisplayNameFor(model => model.Shows)
                <div>
                    <span class="badge rounded-pill bg-secondary">
                        @Model.Shows.Count() show(s)
                    </span>
                </div>
            </dt>
            <dd class="col-sm-10 text-start">
                @foreach (var name in Model.Shows)
                {
                    <div>@Html.DisplayFor(model => name.Name)</div>
                }
            </dd>
        </div>

    </dl>
</div>



